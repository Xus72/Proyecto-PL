RUPTURA: 'RUPTURA';
MOSTRAR: 'MOSTRAR';
DEV: 'dev';
HACER: 'hacer';
MIENTRAS: 'mientras';
ENTONCES: 'entonces';
FMIENTRAS: 'fmientras';
FFUNCION: 'FFUNCION';
SI: 'si';
SINO: 'sino';
FSI: 'fsi';
DP: ':';
PyC: ';';
PA: '(';
PC: ')';
COMA: ',';
ASIG: '=';
CA: '[';
CC: ']';
LLA: '{';
LLC: '}';
MAS: '+';
MENOS: '-';
POR: '*';
IGUAL: '==';
DISTINTO: '!=';
MAYOR: '>';
MAYORIGUAL: '>=';
MENOR: '<';
